{
  "name": "react-blogs",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "private": true,
  "version": "0.0.0",
  "author": "Benji",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.cj",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
